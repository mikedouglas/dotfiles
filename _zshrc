# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
ZSH_THEME="mrtazz"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
plugins=(git ruby brew osx vagrant)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin:$HOME/.cabal/bin

# enable gnu coreutils
source /usr/local/Cellar/coreutils/8.12/aliases
export LS_OPTIONS='--color=auto'
eval `dircolors ~/.dircolors`

alias ls='gls $LS_OPTIONS -hF'
alias ll='gls $LS_OPTIONS -lhF'
alias l='gls $LS_OPTIONS -lAhF'

[[ -s "/Users/mjd/.rvm/scripts/rvm" ]] && source "/Users/mjd/.rvm/scripts/rvm"
